{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "../../dist/out-tsc",
        "types": ["node"]
    },
    "files": ["src/main.ts", "src/polyfills.ts"],
    "include": ["src/*.d.ts",  "**/*.ts"],
    "exclude": ["**/*.spec.ts"],
    "angularCompilerOptions": {
      "enableIvy": true
    }
}
