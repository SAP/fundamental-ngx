{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "target": "es2023",
        "declaration": true,
        "declarationMap": true,
        "types": [],
        "lib": ["dom", "es2023"],
        "useDefineForClassFields": false,
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "module": "preserve",
        "paths": {
            "@fundamental-ngx/core": ["dist/libs/core"],
            "@fundamental-ngx/core/*": ["dist/libs/core/*"],
            "@fundamental-ngx/ui5-webcomponents-base": ["dist/libs/ui5-webcomponents-base"],
            "@fundamental-ngx/ui5-webcomponents-base/*": ["dist/libs/ui5-webcomponents-base/*"]
        }
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "enableResourceInlining": true
    },
    "files": ["./index.ts"],
    "exclude": ["test.ts", "**/*.spec.ts"],
    "include": ["**/*.ts"]
}
