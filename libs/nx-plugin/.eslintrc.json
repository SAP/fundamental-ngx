{
    "extends": ["../../.eslintrc.json"],
    "ignorePatterns": ["!**/*", "*.tsx", "jest.config.ts"],
    "overrides": [
        {
            "files": ["*.ts"],
            "rules": {
                "@typescript-eslint/explicit-function-return-type": "off",
                "@typescript-eslint/no-var-requires": "off",
                "jsdoc/require-jsdoc": "off",
                "grouped-accessor-pairs": "off"
            }
        },
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {}
        },
        {
            "files": ["*.js", "*.jsx"],
            "rules": {}
        }
    ]
}
