{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "../../dist/out-tsc",
        "target": "ES2022",
        "declaration": true,
        "declarationMap": true,
        "types": [],
        "lib": ["dom", "es2018"],
        "useDefineForClassFields": false
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "enableResourceInlining": true
    },
    "exclude": ["**/*.spec.ts", "../../dist/out-tsc"],
    "include": ["./**/*.ts"]
}
