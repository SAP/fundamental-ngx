{
    "projectType": "library",
    "root": "libs/platform/src/lib",
    "sourceRoot": "libs/platform/src/lib",
    "prefix": "fdp",
    "targets": {
        "prepare": {
            "executor": "./tools/executors/prepare-library:prepare",
            "options": {
                "schematics": {
                    "collection": "../../schematics",
                    "tsConfig": "../../tsconfig.schematics.json"
                },
                "copyReadme": {
                    "readmePath": "../../../../PLATFORM_README.md",
                    "targetPath": "../../../../dist/libs/platform/PLATFORM_README.md"
                }
            }
        },
        "compile-typedocs": {
            "executor": "./tools/executors/compile-typedocs:compile-lib",
            "options": {
                "outputPath": "apps/docs/src/assets/typedoc/platform"
            },
            "outputs": ["{options.outputPath}"]
        },
        "build": {
            "executor": "@nrwl/angular:package",
            "outputs": ["dist/libs/platform"],
            "options": {
                "tsConfig": "libs/platform/src/lib/tsconfig.lib.json",
                "project": "libs/platform/src/lib/ng-package.json",
                "updateBuildableProjectDepsInPackageJson": false
            },
            "configurations": {
                "production": {
                    "tsConfig": "libs/platform/src/lib/tsconfig.lib.prod.json"
                }
            }
        },
        "test": {
            "executor": "@angular-devkit/build-angular:karma",
            "options": {
                "main": "libs/platform/src/lib/test.ts",
                "tsConfig": "libs/platform/src/lib/tsconfig.spec.json",
                "karmaConfig": "libs/platform/src/lib/karma.conf.js"
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": ["libs/platform/src/lib/**/*.ts", "libs/platform/src/lib/**/*.html"]
            }
        }
    },
    "tags": ["type:lib", "scope:fdp"],
    "implicitDependencies": ["core"]
}
