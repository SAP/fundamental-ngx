{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/lib",
        "target": "ES2022",
        "declaration": true,
        "declarationMap": true,
        "inlineSources": true,
        "types": [],
        "lib": ["dom", "es2018"],
        "useDefineForClassFields": false
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "enableResourceInlining": true
    },
    "files": ["./index.ts"],
    "include": ["**/*.ts"],
    "exclude": ["src/test.ts", "**/*.spec.ts"]
}
