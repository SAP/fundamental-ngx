{
    "$schema": "http://json-schema.org/schema",
    "$id": "sap-component",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "Component name",
            "$default": {
                "$source": "argv",
                "index": 0
            }
        },
        "project": {
            "type": "string",
            "enum": ["core", "platform", "experimental"]
        }
    },
    "required": ["name", "project"]
}
